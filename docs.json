{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Squid Academy Knowledge Center",
  "description": "Role-based guides, how-tos, and policies for the LMS and tournament platformâ€”built for partners, schools, teachers, students, and teams.",
  "colors": {
    "primary": "#09BECF",
    "light": "#F4F2F3",
    "dark": "#000000"
  },
  "logo": {
    "light": "/public/images/logo-light.png",
    "dark": "/public/images/logo-dark.png",
    "href": "https://squid.academy"
  },
  "favicon": {
    "light": "/public/images/favicon.svg",
    "dark": "/public/images/favicon-dark.svg"
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "navbar": {
    "links": [
      { "label": "Community", "href": "https://discord.gg/Ru4gFYjFEp" }
    ],
    "primary": {
      "type": "button",
      "label": "Contact Us",
      "href": "mailto:support@squid.gg"
    }
  },
  "seo": {
    "metatags": {
      "og:image": "/images/social-preview.png",
      "twitter:card": "summary_large_image",
      "twitter:image": "/images/social-preview.png"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Introduction",
        "pages": ["/introduction/welcome"]
      },
      {
        "tab": "Platform",
        "groups": [
          {
            "group": "Legal & Privacy",
            "pages": [
              "/platform/terms-and-conditions",
              "/platform/privacy-policy",
              "/platform/data-processing-addendum",
              "/platform/intl-data-transfers",
              "/platform/sub-processor-list",
              "/platform/data-retention-deletion"
            ]
          },
          {
            "group": "Security & Safety",
            "pages": [
              "/platform/security-incident-response",
              "/platform/parental-content-guide"
            ]
          },
          {
            "group": "Requests",
            "pages": [
              "/platform/privacy-request-form"
            ]
          }
        ]
      },
      {
        "tab": "User Guides",
        "groups": [
          {
            "group": "LMS",
            "pages": [
              "/user-guides/partners",
              "/user-guides/resellers",
              "/user-guides/org-admins",
              "/user-guides/teachers",
              "/user-guides/students"
            ]
          },
          {
            "group": "Tournament",
            "pages": [
              "/user-guides/team-captains",
              "/user-guides/players",
              "/user-guides/tournament-admins"
            ]
          }
        ]
      },
      {
        "tab": "FAQs",
        "pages": ["/faqs"]
      },
      {
        "tab": "Feedback",
        "groups": [
          {
            "group": "Forms",
            "pages": [
              "/feedback",
              "/feedback/ideas",
              "/feedback/bugs",
              "/feedback/support",
              "/feedback/classroom",
              "/feedback/subscribe"
            ]
          },
          {
            "group": "Announcements",
            "pages": [
              "/feedback/announcements"
            ]
          }
        ]
      }
    ]
  },
  "redirects": [
    { "source": "/", "destination": "/introduction/welcome" },
    { "source": "/platform/feedback", "destination": "/feedback/index" },
    { "source": "/feedback", "destination": "/feedback/index" }
  ],
  "footer": {
    "socials": {
      "facebook": "https://www.facebook.com/SquidAcademy",
      "linkedin": "https://www.linkedin.com/company/squidacademy"
    },
    "links": [
      {
        "header": "Resources",
        "items": [
          { "label": "Request Demo", "href": "https://squid.academy/#contact" }
        ]
      },
      {
        "header": "Company",
        "items": [
          { "label": "Blog", "href": "https://squid.academy/insights" },
          { "label": "Privacy Policy", "href": "https://squidacademy.mintlify.app/platform/privacy-policy" }
        ]
      }
    ]
  },
  "errors": {
    "404": { "redirect": true }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": false,
    "raiseIssue": false
  }
}