{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Acme Docs",
  "description": "Developer documentation for the Acme Platform.",
  "colors": {
    "primary": "#0EA5E9",
    "light": "#F8FAFC",
    "dark": "#0F172A"
  },

  "logo": {
    "light": "/logo-light.svg",
    "dark": "/logo-dark.svg",
    "href": "https://acme.example"
  },
  "favicon": {
    "light": "/favicon.svg",
    "dark": "/favicon-dark.svg"
  },

  "appearance": {
    "default": "system",
    "strict": false
  },

  "navbar": {
    "links": [
      { "label": "Community", "href": "https://community.example" }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.example/signup"
    }
  },

  "footer": {
    "socials": {
      "x": "https://x.com/acme",
      "linkedin": "https://www.linkedin.com/company/acme",
      "github": "https://github.com/acme",
      "slack": "https://acme.example/slack"
    },
    "links": [
      {
        "header": "Resources",
        "items": [
          { "label": "Customers", "href": "https://acme.example/customers" },
          { "label": "Enterprise", "href": "https://acme.example/enterprise" },
          { "label": "Request Demo", "href": "https://acme.example/demo" }
        ]
      },
      {
        "header": "Company",
        "items": [
          { "label": "Careers", "href": "https://acme.example/careers" },
          { "label": "Blog", "href": "https://acme.example/blog" },
          { "label": "Privacy Policy", "href": "https://acme.example/legal/privacy" }
        ]
      }
    ]
  },

  "navigation": {
    "anchors": [
      {
        "anchor": "Documentation",
        "groups": [
          {
            "group": "Platform",
            "pages": [
              "platform/privacy-policy",
              "platform/terms-and-conditions",
              "platform/data-processing-addendum",
              "platform/sub-processor-list",
              "platform/data-retention-deletion",
              "platform/intl-data-transfers",
              "platform/parental-content-guidelines",
              "platform/security-incident-response"
            ]
          },
          {
            "group": "User Guides",
            "pages": [
              "user-guides/players",
              "user-guides/students",
              "user-guides/teachers",
              "user-guides/team-captains",
              "user-guides/partners",
              "user-guides/resellers",
              "user-guides/org-admins",
              "user-guides/tournament-admins"
            ]
          }
        ]
      }
    ]
  },
  "errors": {
    "404": { "redirect": true }
  }
}
